#!/usr/bin/env python3

import os
import sys
import shutil

if len(sys.argv) < 3:
    exit(1)

join   = os.path.join
exists = os.path.exists
isfile = os.path.isfile
islink = os.path.islink

def move(src, dst):
    if not exists(dst) and not islink(dst):
        print(src, "->", dst)
        if islink(src):
            os.symlink(os.readlink(src), dst)
            os.unlink(src)
        else:
            shutil.move(src, dst)
        return True
    if isfile(src) or isfile(dst) or islink(dst):
        print("skipped:", src)
        return False

    empty = True
    for file in os.listdir(src):
        empty &= move(join(src, file), join(dst, file))

    if empty:
        os.rmdir(src)

    return empty

for src in sys.argv[1:-1]:
    name = os.path.basename(src)
    if name[-1] == '/':
        dst = sys.argv[-1]
    else:
        dst = os.path.join(sys.argv[-1], name)
    print(src, dst)
    move(src, dst)
