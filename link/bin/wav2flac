#!/bin/bash

convert() {
    ext="${1##*.}"
    if [ ! "$ext" = "wav" ]; then
        echo "not a wav file."
        return 1
    fi

    name="${1%.*}"
    sox "$name".wav "$name".flac
}

in_directory() {
    backup="$1/wav"
    if [ -d $backup ]; then
        echo "backup directory exists."
        return 1
    fi
    mkdir "$backup"
    for i in "$1"/*.wav; do
        if [ -f "$i" ]; then
            (convert "$i"; mv "$i" "$backup") &
        fi
    done
}

if !(type "sox" > /dev/null 2>&1); then
    echo "sox not found."
    exit 1
fi

if [ -f "$1" ]; then
    convert "$1"
elif [ -d "$1" ]; then
    in_directory "$1"
else
    echo "no such file."
fi
