#!/usr/bin/env python3

import sys

width = int(sys.argv[1])
count = 0

while True:
    try:
        str = input()
        for c in str:
            size = 1 if ord(c) < 128 else 2
            if count + size > width:
                print('')
                count = size
            else:
                count += size

            print(c, end='')
        print('')
        count = 0
    except EOFError:
        break
