#!/bin/bash

usage_exit() {
    echo "Usage: $0 target" 1>&2
    exit 1
}

if [ $1 == "" ]; then
    usage_exit
fi

if [ -z "$(ls $1)" ]; then
    echo "The directory is empty."
    exit 1
fi

for dir in $1/*; do
    if [ -d "${dir}" ]; then
        ./rename.sh -u "$(basename "${dir}")".sh "${dir}"
    fi
done
