#!/bin/bash

if [[ -z $1 ]]; then
    echo "No file passed."
    exit 1
fi

if [[ -d $1 ]]; then
    echo "$1 is a directory."
    exit 1
fi

temp_name="/tmp/$(basename "$1")"
if [[ -f $1 ]]; then
    doas cp "$1" "$temp_name"
    doas chown $(whoami):$(id -gn) "$temp_name"
fi

nvim "$temp_name"
if [[ ! -e $temp_name ]]; then
    exit 0
fi
doas cp --no-preserve=mode,ownership "$temp_name" "$1"
if [[ -e $temp_name ]]; then
    rm $temp_name
fi
