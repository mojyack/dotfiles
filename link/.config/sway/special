set $built_in_display eDP-1

# roration
bindsym $mod+Ctrl+Alt+Up    output $built_in_display transform 180
bindsym $mod+Ctrl+Alt+Down  output $built_in_display transform 0
bindsym $mod+Ctrl+Alt+Left  output $built_in_display transform 90
bindsym $mod+Ctrl+Alt+Right output $built_in_display transform 270

output $built_in_display scale 1.5

# input
input type:keyboard {
    repeat_delay 170
}
input 2:10:TPPS/2_IBM_TrackPoint {
    accel_profile adaptive
    pointer_accel 0.35
}
input 2:7:SynPS/2_Synaptics_TouchPad {
    pointer_accel 0.50 
    scroll_factor 0.80
    natural_scroll enabled
    tap enabled
}

exec libinput-gestures
